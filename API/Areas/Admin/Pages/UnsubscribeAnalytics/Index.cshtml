@page
@model NewsletterApp.API.Areas.Admin.Pages.UnsubscribeAnalytics.IndexModel
@{
    ViewData["Title"] = "Unsubscribe Analytics";
}

<partial name="_PageHeader" model="Model.PageHeader" />

@if (Model.Pagination != null && Model.Pagination.TotalItems > 0)
{
    <p class="text-secondary small mb-2">
        Showing @((Model.Pagination.CurrentPage - 1) * Model.Pagination.PageSize + 1) - @(Math.Min(Model.Pagination.CurrentPage * Model.Pagination.PageSize, Model.Pagination.TotalItems)) of @Model.Pagination.TotalItems unsubscribe(s)
    </p>
}

<div class="card mb-3">
    <div class="card-body py-2">
        <form method="get" class="row g-2 align-items-center">
            <input type="hidden" name="pageNumber" value="1" />
            <div class="col-auto">
                <label class="col-form-label col-form-label-sm text-secondary">Per page</label>
            </div>
            <div class="col-auto">
                <select name="pageSize" class="form-select form-select-sm bg-dark text-white border-secondary" onchange="this.form.submit()">
                    @foreach (var size in Model.Pagination?.PageSizes ?? new List<int> { 10, 25, 50, 100 })
                    {
                        <option value="@size" selected="@(Model.PageSize == size)">@size</option>
                    }
                </select>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle mb-0">
            <thead class="table-active">
                <tr>
                    <th>Email</th>
                    <th>Reason</th>
                    <th>Comment</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.UnsubscribeHistoryPaged?.Items != null && Model.UnsubscribeHistoryPaged.Items.Any())
                {
                    @foreach (var item in Model.UnsubscribeHistoryPaged.Items)
                    {
                        <tr>
                            <td class="fw-bold">@item.Email</td>
                            <td>@item.Reason</td>
                            <td class="text-secondary small">@(string.IsNullOrEmpty(item.Comment) ? "â€”" : item.Comment)</td>
                            <td class="text-nowrap">@item.Timestamp.ToString("MMM dd, yyyy HH:mm")</td>
                        </tr>
                    }
                }
                else
                {
                    <partial name="_TableEmptyRow" view-data="@(new ViewDataDictionary(ViewData) { { "ColSpan", 4 }, { "Message", "No unsubscribe history yet." } })" />
                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_Pagination" model="Model.Pagination" />
