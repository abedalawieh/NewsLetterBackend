@page
@model NewsletterApp.API.Areas.Admin.Pages.Subscribers.IndexModel
@{
    ViewData["Title"] = "Subscriber Management";
}

<div class="d-flex align-items-center mb-5">
    <h2 class="fw-bold mb-0">Subscribers</h2>
    <a asp-page="Create" class="btn btn-primary ms-auto">
        <i class="fas fa-plus me-2"></i> New Subscriber
    </a>
</div>

<!-- Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" name="searchTerm" class="form-control bg-dark text-white border-secondary" 
                       placeholder="Search by email..." value="@Model.SearchTerm" />
            </div>
            <div class="col-md-3">
                <select name="statusFilter" class="form-select bg-dark text-white border-secondary">
                    <option value="">All Status</option>
                    @{
                        var activeSelected = "active" == Model.StatusFilter ? true : false;
                        var inactiveSelected = "inactive" == Model.StatusFilter ? true : false;
                    }
                    @if (activeSelected)
                    {
                        <option value="active" selected="selected">Active</option>
                    }
                    else
                    {
                        <option value="active">Active</option>
                    }
                    @if (inactiveSelected)
                    {
                        <option value="inactive" selected="selected">Inactive</option>
                    }
                    else
                    {
                        <option value="inactive">Inactive</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search me-2"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Table -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-dark table-hover align-middle mb-0">
            <thead class="table-active">
                <tr>
                    <th>Email</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Subscribers?.Any() == true)
                {
                    @foreach (var subscriber in Model.Subscribers)
                    {
                        <tr>
                            <td class="fw-bold">@subscriber.Email</td>
                            <td>@subscriber.FirstName @subscriber.LastName</td>
                            <td>
                                @if (subscriber.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>@subscriber.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-page="Edit" asp-route-id="@subscriber.Id" class="btn btn-outline-info">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-warning" 
                                            onclick="document.getElementById('toggleForm-@subscriber.Id').submit();">
                                        @if (subscriber.IsActive)
                                        {
                                            <span><i class="fas fa-power-off"></i> Disable</span>
                                        }
                                        else
                                        {
                                            <span><i class="fas fa-power-off"></i> Enable</span>
                                        }
                                    </button>
                                    <button type="button" class="btn btn-outline-danger" 
                                            onclick="confirmDelete('@subscriber.Id', '@subscriber.Email')">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-secondary py-4">
                            No subscribers found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (Model.Pagination?.TotalPages > 1)
{
    <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.Pagination.TotalPages; i++)
            {
                if (i == Model.Pagination.CurrentPage)
                {
                    <li class="page-item active">
                        <span class="page-link">@i</span>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-page="Index" asp-route-pageNumber="@i"
                           asp-route-searchTerm="@Model.SearchTerm" asp-route-statusFilter="@Model.StatusFilter">@i</a>
                    </li>
                }
            }
        </ul>
    </nav>
}

<!-- Toggle Forms -->
@foreach (var subscriber in Model.Subscribers)
{
    <form id="toggleForm-@subscriber.Id" method="post" asp-page-handler="Toggle" asp-route-id="@subscriber.Id" style="display:none;"></form>
}

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Delete Subscriber</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong id="deleteSubscriberEmail"></strong>?</p>
                <p class="text-warning small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" asp-page-handler="Delete" style="display:inline;">
                    <input type="hidden" name="id" id="deleteSubscriberIdInput" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let deleteModal;
    document.addEventListener('DOMContentLoaded', function() {
        deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    });

    function confirmDelete(id, email) {
        document.getElementById('deleteSubscriberEmail').textContent = email;
        document.getElementById('deleteSubscriberIdInput').value = id;
        deleteModal.show();
    }
</script>