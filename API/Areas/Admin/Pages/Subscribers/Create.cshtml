@page
@model NewsletterApp.API.Areas.Admin.Pages.Subscribers.CreateModel
@{
    ViewData["Title"] = "New Subscriber";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="d-flex align-items-center mb-5">
            <a asp-page="Index" class="btn btn-outline-secondary rounded-circle px-3 py-2 me-4">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2 class="fw-bold mb-0">Add New Subscriber</h2>
        </div>

        <div class="card p-5">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Input.FirstName" class="text-uppercase-label">First Name</label>
                        <input asp-for="Input.FirstName" class="form-control" placeholder="e.g., John" required />
                        <span asp-validation-for="Input.FirstName" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Input.LastName" class="text-uppercase-label">Last Name</label>
                        <input asp-for="Input.LastName" class="form-control" placeholder="e.g., Doe" required />
                        <span asp-validation-for="Input.LastName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <label asp-for="Input.Email" class="text-uppercase-label">Email Address</label>
                    <input asp-for="Input.Email" class="form-control" placeholder="john.doe@example.com" required />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-5">
                    <label class="text-uppercase-label">Subscriber Type *</label>
                    <div class="premium-form-grid">
                        @foreach (var type in Model.SubscriberTypes)
                        {
                            <label class="premium-check-item" for="type_@type.Value">
                                <input class="premium-check-input" type="radio" asp-for="Input.Type" value="@type.Value" id="type_@type.Value" required>
                                <span class="premium-check-label">@type.Label</span>
                            </label>
                        }
                    </div>
                    <span asp-validation-for="Input.Type" class="text-danger small"></span>
                </div>

                <div class="mb-5">
                    <label class="text-uppercase-label">Communication Methods *</label>
                    <div class="premium-form-grid">
                        @foreach (var method in Model.CommunicationMethods)
                        {
                            <label class="premium-check-item" for="meth_@method.Value">
                                <input class="premium-check-input" type="checkbox" name="SelectedMethods" value="@method.Value" id="meth_@method.Value">
                                <span class="premium-check-label">@method.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="mb-5">
                    <label class="text-uppercase-label">Interests *</label>
                    <div class="premium-form-grid">
                        @foreach (var interest in Model.Interests)
                        {
                            <label class="premium-check-item" for="int_@interest.Value">
                                <input class="premium-check-input" type="checkbox" name="SelectedInterests" value="@interest.Value" id="int_@interest.Value">
                                <span class="premium-check-label">@interest.Label</span>
                            </label>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 pt-4 border-top border-secondary border-opacity-10">
                    <a asp-page="Index" class="btn btn-outline-secondary px-4 py-2">Cancel</a>
                    <button type="submit" class="btn btn-primary px-5 py-2 fw-bold">
                        <i class="fas fa-user-plus me-2"></i> Create Subscriber
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Real-time selection highlighting
        document.querySelectorAll('.premium-check-input').forEach(input => {
            input.addEventListener('change', function() {
                const isRadio = this.type === 'radio';
                const name = this.name;
                
                if (isRadio) {
                    document.querySelectorAll(`.premium-check-input[name="${name}"]`).forEach(r => {
                        r.closest('.premium-check-item').classList.remove('selected');
                    });
                }
                
                if (this.checked) {
                    this.closest('.premium-check-item').classList.add('selected');
                } else {
                    this.closest('.premium-check-item').classList.remove('selected');
                }
            });
            
            // Initial state
            if (input.checked) {
                input.closest('.premium-check-item').classList.add('selected');
            }
        });
    </script>
}
