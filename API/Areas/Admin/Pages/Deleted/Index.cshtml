@page
@using NewsletterApp.API.Areas.Admin.Pages.ViewModels
@model NewsletterApp.API.Areas.Admin.Pages.Deleted.IndexModel
@{
    ViewData["Title"] = "Deleted Newsletters";
}

<style>
    .deleted-item-card { padding: 1rem; border-left: 4px solid #dc2626; }
    .deleted-badge { background: #dc2626; }
    .restore-btn { color: #10b981; border-color: #10b981; }
    .restore-btn:hover { background: #10b981; color: white; }
</style>


<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-bold">Deleted Newsletters</h1>
        <p class="text-secondary small">View and manage soft-deleted newsletters. You can restore or permanently delete them.</p>
    </div>
</div>


@if (Model.DeletedNewsletters.Any())
{
    <div class="card overflow-hidden mb-4">
        <div class="card-header bg-danger bg-opacity-10 border-danger p-4">
            <h5 class="text-danger fw-bold mb-0">
                <i class="fas fa-envelopes-bulk me-2"></i> Deleted Newsletters (@Model.DeletedNewsletters.Count)
            </h5>
        </div>
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Target Interests</th>
                        <th>Created</th>
                        <th>Deleted At</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DeletedNewslettersPaged.Items.OrderByDescending(i => i.DeletedAt))
                    {
                        <tr class="deleted-item-card">
                            <td class="ps-4">
                                <span class="text-white fw-semibold">@item.Title</span>
                            </td>
                            <td>
                                <span class="text-secondary small">@item.Subject</span>
                            </td>
                            <td>
                                <span class="text-secondary small">
                                    @item.CreatedAt.ToString("MMM dd, yyyy")
                                </span>
                            </td>
                            <td>
                                <span class="text-secondary small">
                                    @item.DeletedAt.ToString("MMM dd, yyyy HH:mm")
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <form method="post" asp-page-handler="Restore" asp-route-id="@item.Id" class="d-inline">
                                    <button type="submit" class="btn btn-sm restore-btn rounded-pill px-3">
                                        <i class="fas fa-undo me-1"></i> Restore
                                    </button>
                                </form>
                                <button type="button" class="btn btn-sm btn-outline-danger rounded-pill px-2" onclick="openDeleteModal('@item.Id', '@item.Title')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        
        @{
            var newsletterTotalPages = Math.Ceiling((double)Model.DeletedNewslettersPaged.TotalItems / Model.DeletedNewslettersPaged.PageSize);
        }
        @if (newsletterTotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">
                    @if (Model.DeletedNewslettersPaged.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=1">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@(Model.DeletedNewslettersPaged.CurrentPage - 1)">Previous</a>
                        </li>
                    }
                    <li class="page-item active">
                        <span class="page-link">Page @Model.DeletedNewslettersPaged.CurrentPage of @newsletterTotalPages</span>
                    </li>
                    @if (Model.DeletedNewslettersPaged.CurrentPage < newsletterTotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@(Model.DeletedNewslettersPaged.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?PageNumber=@newsletterTotalPages">Last</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
}


@if (!Model.DeletedNewsletters.Any())
{
    <div class="card p-5 text-center">
        <div class="text-secondary mb-3">
            <i class="fas fa-check-circle fa-3x opacity-25"></i>
        </div>
        <h5 class="text-secondary fw-normal">No deleted newsletters found</h5>
        <p class="small text-muted">All your newsletters are safe and accounted for!</p>
    </div>
}


<div class="modal fade" id="permanentDeleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark border border-danger text-white">
            <div class="modal-header border-danger bg-danger bg-opacity-10">
                <div>
                    <h5 class="modal-title text-danger fw-bold">
                        <i class="fas fa-exclamation-triangle me-2"></i> Permanently Delete Newsletter
                    </h5>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-2">Are you sure you want to <strong>permanently delete</strong> this newsletter?</p>
                <p class="text-secondary small mb-3">
                    <strong id="deleteItemName"></strong> will be completely removed from the system. This action <strong>CANNOT</strong> be undone.
                </p>
                <div class="alert alert-danger alert-sm mb-0" role="alert">
                    <i class="fas fa-bolt me-2"></i> <strong>Warning:</strong> This is permanent and irreversible.
                </div>
            </div>
            <div class="modal-footer border-danger">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="PermanentlyDelete" id="deleteForm" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="deleteItemId" name="id" />
                    <button type="submit" class="btn btn-danger" id="deleteSubmitBtn">
                        <i class="fas fa-skull-crossbones me-1"></i> Permanently Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openDeleteModal(id, name) {
            document.getElementById('deleteItemId').value = id;
            document.getElementById('deleteItemName').textContent = name;
            var modal = new bootstrap.Modal(document.getElementById('permanentDeleteModal'));
            modal.show();
        }

        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            const id = document.getElementById('deleteItemId').value;
            if (!id) {
                e.preventDefault();
                alert('Error: Newsletter ID is missing. Please try again.');
                return false;
            }
        });
    </script>
}
