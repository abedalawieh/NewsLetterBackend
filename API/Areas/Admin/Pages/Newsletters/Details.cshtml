@page "{id:guid}"
@model NewsletterApp.API.Areas.Admin.Pages.Newsletters.DetailsModel
@{
    ViewData["Title"] = "Newsletter Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="d-flex align-items-center mb-5">
            <a asp-page="Index" class="btn btn-outline-secondary rounded-circle px-3 py-2 me-4">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div>
                <h2 class="fw-bold mb-0">@Model.Newsletter.Title</h2>
                <p class="text-muted mb-0">Campaign Details</p>
            </div>
            <div class="ms-auto">
                @if (Model.Newsletter.IsDraft)
                {
                    <span class="badge bg-warning text-dark fs-6 px-3 py-2">Draft</span>
                }
                else
                {
                    <span class="badge bg-success fs-6 px-3 py-2">Sent</span>
                }
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row g-4 mb-5">
            <div class="col-md-3">
                <div class="card stat-card">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="fas fa-calendar text-primary"></i>
                        </div>
                        <div>
                            <p class="text-muted small mb-0">Created</p>
                            <p class="fw-bold mb-0">@Model.Newsletter.CreatedAt.ToString("MMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                            <i class="fas fa-paper-plane text-success"></i>
                        </div>
                        <div>
                            <p class="text-muted small mb-0">Sent</p>
                            <p class="fw-bold mb-0">
                                @(Model.Newsletter.SentAt?.ToString("MMM dd, yyyy") ?? "Not yet")
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                            <i class="fas fa-users text-info"></i>
                        </div>
                        <div>
                            <p class="text-muted small mb-0">Target Audience</p>
                            <p class="fw-bold mb-0">
                                @(string.IsNullOrEmpty(Model.Newsletter.TargetSubscriberType) ? "All Subscribers" : Model.Newsletter.TargetSubscriberType)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                            <i class="fas fa-palette text-warning"></i>
                        </div>
                        <div>
                            <p class="text-muted small mb-0">Template</p>
                            <p class="fw-bold mb-0">
                                @(string.IsNullOrEmpty(Model.Newsletter.TemplateName) ? "Auto" : Model.Newsletter.TemplateName)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Target Interests -->
        <div class="card mb-4 p-4">
            <h5 class="fw-bold mb-3"><i class="fas fa-tags me-2 text-primary"></i>Target Interests</h5>
            <div class="d-flex flex-wrap gap-2">
                @{
                    var interests = Model.Newsletter.TargetInterests?.Split(',', StringSplitOptions.RemoveEmptyEntries) ?? Array.Empty<string>();
                }
                @if (interests.Any())
                {
                    @foreach (var interest in interests)
                    {
                        <span class="badge bg-primary bg-opacity-25 text-primary px-3 py-2">@interest.Trim()</span>
                    }
                }
                else
                {
                    <span class="text-muted">No specific interests targeted</span>
                }
            </div>
        </div>

        <!-- Content -->
        <div class="card mb-4 p-4">
            <h5 class="fw-bold mb-3"><i class="fas fa-file-alt me-2 text-primary"></i>Content</h5>
            <div class="bg-dark p-4 rounded" style="max-height: 500px; overflow-y: auto;">
                <pre class="text-light mb-0" style="white-space: pre-wrap; word-wrap: break-word; font-family: 'Fira Code', monospace;">@Model.Newsletter.Content</pre>
            </div>
        </div>

        <!-- Content Preview (HTML rendered) -->
        <div class="card mb-4 p-4">
            <h5 class="fw-bold mb-3"><i class="fas fa-eye me-2 text-primary"></i>Content Preview</h5>
            <div class="border rounded p-4" style="background: #fff; color: #333; max-height: 600px; overflow-y: auto;">
                @Html.Raw(Model.Newsletter.Content)
            </div>
        </div>

        <!-- Actions -->
        <div class="d-flex justify-content-between align-items-center">
            <a asp-page="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
            
            <div class="d-flex gap-3">
                @if (Model.Newsletter.IsDraft)
                {
                    <form method="post" asp-page="Index" asp-page-handler="Send" asp-route-id="@Model.Newsletter.Id" class="d-inline">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-paper-plane me-2"></i>Send Newsletter
                        </button>
                    </form>
                }
                <button type="button" class="btn btn-outline-danger" onclick="confirmDelete()">
                    <i class="fas fa-trash me-2"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark">
            <div class="modal-header border-secondary">
                <h5 class="modal-title">Delete Newsletter</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete <strong>@Model.Newsletter.Title</strong>?</p>
                <p class="text-warning small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-secondary">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page="Index" asp-page-handler="Delete" asp-route-id="@Model.Newsletter.Id" class="d-inline">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let deleteModal;
    document.addEventListener('DOMContentLoaded', function() {
        deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));
    });

    function confirmDelete() {
        deleteModal.show();
    }
</script>
