@page "{id:guid}"
@model NewsletterApp.API.Areas.Admin.Pages.Subscribers.EditModel
@{
    ViewData["Title"] = "Subscriber Details";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="d-flex align-items-center mb-5">
            <a asp-page="Index" class="btn btn-outline-secondary rounded-circle px-3 py-2 me-4">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div>
                <h2 class="fw-bold mb-0">Subscriber Information</h2>
                <p class="text-secondary small mb-0">Viewing profile and preferences for @Model.Subscriber?.Email</p>
            </div>
            <div class="ms-auto">
                @if (Model.Subscriber?.IsActive == true)
                {
                    <span class="badge bg-success px-3 py-2">ACTIVE</span>
                }
                else
                {
                    <span class="badge bg-danger px-3 py-2">INACTIVE</span>
                }
            </div>
        </div>

        <div class="card p-5">
            <div class="row g-4 mb-5">
                <div class="col-md-6">
                    <label class="text-uppercase-label">First Name</label>
                    <div class="form-control-plaintext text-white fs-5 fw-bold">@Model.Subscriber?.FirstName</div>
                </div>
                <div class="col-md-6">
                    <label class="text-uppercase-label">Last Name</label>
                    <div class="form-control-plaintext text-white fs-5 fw-bold">@Model.Subscriber?.LastName</div>
                </div>
            </div>

            <div class="mb-5">
                <label class="text-uppercase-label">Subscriber Type</label>
                <div class="premium-form-grid">
                    @foreach (var type in Model.SubscriberTypes)
                    {
                        var isSelected = Model.Subscriber?.Type == type.Value;
                        <div class="premium-check-item @(isSelected ? "selected" : "opacity-50")">
                            <span class="premium-check-label">
                                @if (isSelected) { <i class="fas fa-check-circle me-2 text-primary"></i> }
                                @type.Label
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div class="mb-5">
                <label class="text-uppercase-label">Communication Methods</label>
                <div class="premium-form-grid">
                    @foreach (var method in Model.CommunicationMethods)
                    {
                        var isChecked = Model.Subscriber?.CommunicationMethods.Contains(method.Value) ?? false;
                        <div class="premium-check-item @(isChecked ? "selected" : "opacity-50")">
                            <span class="premium-check-label">
                                @if (isChecked) { <i class="fas fa-check-circle me-2 text-primary"></i> }
                                @method.Label
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div class="mb-5">
                <label class="text-uppercase-label">Interests</label>
                <div class="premium-form-grid">
                    @foreach (var interest in Model.Interests)
                    {
                        var isChecked = Model.Subscriber?.Interests.Contains(interest.Value) ?? false;
                        <div class="premium-check-item @(isChecked ? "selected" : "opacity-50")">
                            <span class="premium-check-label">
                                @if (isChecked) { <i class="fas fa-check-circle me-2 text-primary"></i> }
                                @interest.Label
                            </span>
                        </div>
                    }
                </div>
            </div>

            <div class="d-flex justify-content-end gap-3 pt-4 border-top border-secondary border-opacity-10">
                <a asp-page="Index" class="btn btn-outline-secondary px-4 py-2">Back to List</a>
            </div>
        </div>
    </div>
</div>
