@page "{id}"
@model NewsletterApp.API.Areas.Admin.Pages.Admins.ChangePasswordModel
@{
    ViewData["Title"] = "Reset Credentials";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="d-flex align-items-center mb-5">
            <a asp-page="Index" class="btn btn-outline-secondary rounded-circle px-3 py-2 me-4">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2 class="fw-bold mb-0">Credential Reset</h2>
        </div>

        <div class="card p-5">
            <div class="text-center mb-4">
                <i class="fas fa-key fa-2x text-warning mb-3"></i>
                <h5 class="fw-bold">Override Identity Password</h5>
                <p class="text-secondary small">Profile: <span class="text-white fw-bold">@Model.TargetUsername</span></p>
            </div>
            
            <form method="post">
                <div asp-validation-summary="All" class="text-danger small mb-4"></div>
                <input type="hidden" asp-for="UserId" />
                
                <div class="mb-5">
                    <label class="form-label text-secondary small text-uppercase">New Security Protocol (Password)</label>
                    <input asp-for="NewPassword" type="password" class="form-control bg-dark text-white border-0 p-3 shadow-sm" required />
                    <p class="text-secondary small mt-2">Minimum 6 characters. Authentication link will be updated immediately.</p>
                </div>

                <button type="submit" class="btn btn-warning w-100 py-3 fw-bold">
                    Force Update Credentials
                </button>
            </form>
        </div>
    </div>
</div>

