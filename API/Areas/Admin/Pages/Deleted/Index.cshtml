@page
@using NewsletterApp.API.Areas.Admin.Pages.ViewModels
@model NewsletterApp.API.Areas.Admin.Pages.Deleted.IndexModel
@{
    ViewData["Title"] = "Deleted Items";
}

<style>
    .deleted-item-card { padding: 1rem; border-left: 4px solid #dc2626; }
    .deleted-badge { background: #dc2626; }
    .restore-btn { color: #10b981; border-color: #10b981; }
    .restore-btn:hover { background: #10b981; color: white; }
</style>

<!-- Page Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 fw-bold">Deleted Items Management</h1>
        <p class="text-secondary small">View and manage soft-deleted items. You can restore or permanently delete them.</p>
    </div>
</div>

@if (Model.ReplaceAndDeleteInfo != null)
{
    var info = Model.ReplaceAndDeleteInfo;
    <div class="alert alert-warning d-flex align-items-start mb-4" role="alert">
        <i class="fas fa-exchange-alt me-3 mt-1"></i>
        <div class="flex-grow-1">
            <h6 class="alert-heading mb-2">Replace and Delete</h6>
            <p class="mb-2">The item <strong>@info.ItemLabel</strong> has <strong>@info.SubscriberCount</strong> subscriber(s) using it. Select a replacement option to migrate them, then permanently delete.</p>
            <form method="post" asp-page-handler="ReplaceAndDelete" class="d-flex gap-2 align-items-end flex-wrap">
                <input type="hidden" name="id" value="@info.ItemId" />
                <input type="hidden" name="category" value="@info.Category" />
                <input type="hidden" name="oldValue" value="@info.OldValue" />
                <div class="flex-grow-1" style="min-width: 200px;">
                    <label class="form-label small text-secondary">Replacement</label>
                    <select name="newValue" class="form-select form-select-sm bg-dark text-white border-secondary" required>
                        <option value="">-- Select replacement --</option>
                        @foreach (var opt in info.Replacements)
                        {
                            <option value="@opt.Value">@opt.Label</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-danger btn-sm">
                    <i class="fas fa-exchange-alt me-1"></i> Replace & Permanently Delete
                </button>
                <a href="?ItemType=@Model.ItemType" class="btn btn-outline-secondary btn-sm">Cancel</a>
            </form>
        </div>
    </div>
}

<!-- Filter Tabs -->
<div class="mb-4">
    <div class="btn-group" role="group">
        <a href="?ItemType=All" class="btn @(Model.ItemType == "All" || Model.ItemType == null ? "btn-primary" : "btn-outline-secondary")">
            <i class="fas fa-list me-2"></i> All (@(Model.DeletedItems.Count + Model.DeletedMetadata.Count + Model.DeletedNewsletters.Count))
        </a>
        <a href="?ItemType=Subscriber" class="btn @(Model.ItemType == "Subscriber" ? "btn-primary" : "btn-outline-secondary")">
            <i class="fas fa-users me-2"></i> Subscribers (@Model.DeletedItems.Count)
        </a>
        <a href="?ItemType=Metadata" class="btn @(Model.ItemType == "Metadata" ? "btn-primary" : "btn-outline-secondary")">
            <i class="fas fa-tags me-2"></i> Metadata (@Model.DeletedMetadata.Count)
        </a>
        <a href="?ItemType=Newsletter" class="btn @(Model.ItemType == "Newsletter" ? "btn-primary" : "btn-outline-secondary")">
            <i class="fas fa-envelopes-bulk me-2"></i> Newsletters (@Model.DeletedNewsletters.Count)
        </a>
    </div>
</div>

<!-- Deleted Subscribers -->
@if ((Model.ItemType == "All" || Model.ItemType == "Subscriber") && Model.DeletedItems.Any())
{
    <div class="card overflow-hidden mb-4">
        <div class="card-header bg-danger bg-opacity-10 border-danger p-4">
            <h5 class="text-danger fw-bold mb-0">
                <i class="fas fa-users me-2"></i> Deleted Subscribers (@Model.DeletedItems.Count)
            </h5>
        </div>
        <div class="table-responsive">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Details</th>
                        <th>Deleted At</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.DeletedItemsPaged.Items.OrderByDescending(i => i.DeletedAt))
                    {
                        <tr class="deleted-item-card">
                            <td class="ps-4">
                                <div class="fw-bold text-white">@item.Name</div>
                            </td>
                            <td>
                                <span class="text-secondary small">@item.Email</span>
                            </td>
                            <td>
                                <span class="badge bg-secondary bg-opacity-50">@item.Details</span>
                            </td>
                            <td>
                                <span class="text-secondary small">
                                    @item.DeletedAt.ToString("MMM dd, yyyy HH:mm")
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <form method="post" asp-page-handler="Restore" asp-route-id="@item.Id" asp-route-type="Subscriber" class="d-inline">
                                    <button type="submit" class="btn btn-sm restore-btn rounded-pill px-3">
                                        <i class="fas fa-undo me-1"></i> Restore
                                    </button>
                                </form>
                                <button type="button" class="btn btn-sm btn-outline-danger rounded-pill px-2" onclick="openDeleteModal('@item.Id', '@item.Name', 'Subscriber')">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Pagination for Subscribers -->
        @{
            var totalPages = Math.Ceiling((double)Model.DeletedItemsPaged.TotalItems / Model.DeletedItemsPaged.PageSize);
        }
        @if (totalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-3">
                <ul class="pagination justify-content-center">
                    @if (Model.DeletedItemsPaged.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?ItemType=@Model.ItemType&PageNumber=1">First</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?ItemType=@Model.ItemType&PageNumber=@(Model.DeletedItemsPaged.CurrentPage - 1)">Previous</a>
                        </li>
                    }
                    <li class="page-item active">
                        <span class="page-link">Page @Model.DeletedItemsPaged.CurrentPage of @totalPages</span>
                    </li>
                    @if (Model.DeletedItemsPaged.CurrentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?ItemType=@Model.ItemType&PageNumber=@(Model.DeletedItemsPaged.CurrentPage + 1)">Next</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="?ItemType=@Model.ItemType&PageNumber=@totalPages">Last</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
}

