@page
@model NewsletterApp.API.Areas.Admin.Pages.Admins.CreateModel
@{
    ViewData["Title"] = "Deploy Administrator";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="d-flex align-items-center mb-5">
            <a asp-page="Index" class="btn btn-outline-secondary rounded-circle px-3 py-2 me-4">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2 class="fw-bold mb-0">Identity Configuration</h2>
        </div>

        <div class="card p-5">
            <h5 class="fw-bold mb-4">Initialize New Admin Profile</h5>
            
            <form method="post">
                <div asp-validation-summary="All" class="text-danger small mb-4"></div>
                
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label class="form-label text-secondary small text-uppercase">Identification (Username)</label>
                        <input asp-for="Input.Username" class="form-control bg-dark text-white border-0 p-3 shadow-sm" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-secondary small text-uppercase">Email Endpoint</label>
                        <input asp-for="Input.Email" type="email" class="form-control bg-dark text-white border-0 p-3 shadow-sm" required />
                    </div>
                </div>
                
                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label class="form-label text-secondary small text-uppercase">First Name</label>
                        <input asp-for="Input.FirstName" class="form-control bg-dark text-white border-0 p-3 shadow-sm" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label text-secondary small text-uppercase">Last Name</label>
                        <input asp-for="Input.LastName" class="form-control bg-dark text-white border-0 p-3 shadow-sm" required />
                    </div>
                </div>

                <div class="mb-5">
                    <label class="form-label text-secondary small text-uppercase border-bottom pb-1 border-opacity-10 w-100">Security Clearance (Password)</label>
                    <input asp-for="Input.Password" type="password" class="form-control bg-dark text-white border-0 p-3 shadow-sm" required />
                    <p class="text-secondary small mt-2"><i class="fas fa-info-circle me-1"></i> Ensure access is granted only to trusted personnel.</p>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary px-5 py-3 fw-bold">
                        Confirm & Deploy Profile
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

